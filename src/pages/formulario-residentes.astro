---
import LayoutEncuestas from '../layouts/LayoutEncuestas.astro'
import Rainbow from '/assets/rainbow.svg'
import { Checker } from '../components'
import { CODIGO_RESIDENTES, STORAGE_RESIDENTE, URL_LINKS } from '../utility/constants'
---

<script async src="https://tally.so/widgets/embed.js"/>
  <style>
    html { margin: 0; height: 100%; overflow: hidden; }
    iframe { position: absolute; top: 0; right: 0; bottom: 0; left: 0; border: 0; }
  </style>
<LayoutEncuestas title="Indicadores Culturales - Formulario Residentes">
  <Checker client:only='react' code={CODIGO_RESIDENTES} storage={STORAGE_RESIDENTE} redirect={URL_LINKS.home} login={URL_LINKS.loginResidentes}/>
    <iframe
      class="mt-16"
      data-tally-src="https://tally.so/r/wMDlGM?transparentBackground=1"
      width="100%"
      height="100%">
    </iframe>
  <img class="absolute opacity-40 bottom-0 left-0 m-auto right-0 -z-10" src={Rainbow} alt="">
</LayoutEncuestas>