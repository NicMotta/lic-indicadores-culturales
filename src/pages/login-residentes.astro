---
import Layout from '../layouts/Layout.astro'
import VectorViolet from '/assets/vector-violet.svg'
import { Login } from '../components'
import { CODIGO_RESIDENTES, STORAGE_RESIDENTE, URL_LINKS } from '../utility/constants'
---

<Layout title="Indicadores Culturales - Encuesta Residentes">
  <div class="max-w-5xl p-3 m-auto relative flex flex-col items-center gap-4">
    <img id="background" src={VectorViolet} class="absolute top-32 md:top-46 w-64 md:w-1/3 left-0 m-auto right-0 -z-10" alt="">
    <Login code={CODIGO_RESIDENTES} storage={STORAGE_RESIDENTE} redirect={URL_LINKS.encuestas.residentes} client:only='react' />
  </div>
</Layout>

<style>
  #background {
    animation: rotation 20s infinite linear;
  }

  @keyframes rotation {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>